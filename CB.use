class Board 
operations

    getOrderedRows(): OrderedSet(Row) = OrderedSet{
        #one,#two,#three,#four,#five,#six,#seven,#eight
    }

    getOrderedColumns(): OrderedSet(Column) = OrderedSet{
        #a, #b, #c, #d, #e, #f, #g, #h
        }


    getRowName(r: Row): String =
        let
            names = OrderedSet{'1', '2', '3', '4', '5', '6', '7', '8'}
        in
            names->at(getOrderedRows()->indexOf(r))

    getColumnName(c: Column): String = 
        let
            names = OrderedSet{'a', 'b', 'c', 'd', 'e', 'f', 'g', 'h'}
		in
            names->at(getOrderedColumns()->indexOf(c))
    

    


    printBlankBoardShades()
    begin
        declare
            square: Square,
            str: String;
         WriteLine('\nThe Blank CheckersBoard - Shades');
         for r in self.getOrderedRows()->reverse()->asSequence() do
            WriteLine('-------------------------');
            Write('|');
            for f in self.getOrderedColumns()->asSequence() do
				square := self.squares.select(
					s | s.row =r and s.column = f)->any(true);
				if square.shade = Shade::Red
				then str := 'R'
				else str := 'W'
				end;
				Write(str + ' |');
            end;
            WriteLine('');
        end;
        WriteLine('-------------------------\n');
    end

    printBlankBoardSquares()
    begin
        declare
            square: Square,
            str: String;
            WriteLine('\nThe Blank Chessboard - Squares');
            for r in self.getOrderedRows()->reverse()->asSequence() do
                WriteLine('-------------------------');
                Write('|');
                for c in self.getOrderedColumns()->asSequence() do
    				square := self.squares.select(
    					s | s.row =r and s.column = c)->any(true);
    				Write(square.getSquareName() + '|');
                end;
                WriteLine('');
            end;
            WriteLine('-------------------------\n');
        end
    
    printBoard()
    begin
        declare
            piece: Piece,
            str: String;

        WriteLine('\n  Checkers Blitz');
        for r in self.getOrderedRows()->reverse()->asSequence() do
            WriteLine('-------------------------');
            Write('|');
            for c in self.getOrderedColumns()->asSequence() do
                piece := self.squares.select(
                    s | s.row =r and s.column = c)->any(true).pieceInSquare;
                    if piece.colour = #Red and piece.king->size()=0
                    then
                    str := 'rP'
                    else
                        if piece.colour = #White and piece.king->size()=0
                        then
                        str := 'wP'
                        else
                            if piece.colour = #Red and piece.king->size()=1
                            then
                            str := 'rKp'
                            else
                                if piece.colour = #White and piece.king->size()=1
                                then
                                str := 'wKp'
                                else
                                str:= '  '
                                end;
                            end;
                        end;
                    end;    
            Write(str + '|');
           end;
           WriteLine('');
           
        end;
        WriteLine('-------------------------\n');
        
    end

