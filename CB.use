class MovePattern 
    attributes 
        patternType: Pattern
    operations

    getRowIndex(currSquare:Square): Integer begin 
        result := OrderedSet{#one,#two,#three,#four,#five,#six,#seven,#eight}->indexOf(currSquare.row)
    end
    getColumnIndex(currSquare:Square): Integer begin
        result := OrderedSet{#a, #b, #c, #d, #e, #f, #g, #h}->indexOf(currSquare.column)
    end
    possibleMoves(fr:Square, piece:Piece) : OrderedSet(Tuple(toRow:Row,toColumn:Column)) begin
        
        declare ridx:Integer,cidx:Integer,oneDiagonallyFwdMoves:Sequence(Integer),
        twoDiagonallyFwdMoves:Sequence(Integer),
        possMoves:OrderedSet(Tuple(toRow:Row,toColumn:Column)),
        singleRow:Integer;
        
        oneDiagonallyFwdMoves := Sequence{};
        twoDiagonallyFwdMoves := Sequence{};
        
        possMoves := OrderedSet{};
        
        ridx := OrderedSet{#one,#two,#three,#four,#five,#six,#seven,#eight}->indexOf(fr.row);
        cidx := OrderedSet{#a, #b, #c, #d, #e, #f, #g, #h}->indexOf(fr.column);

        WriteLine(' ' +piece.currentPlaceOnBoard.board.getRowName(#one));
        if (piece.patternType = #OneOrTwoSquareDiagonallyForward and piece.colour = #Red) or piece.king -> size() = 1 then
            
            if self.validRowHelper(ridx + 1) then
                WriteLine ('There Is a Valid Row For A Red Piece');
                
                oneDiagonallyFwdMoves := OrderedSet{cidx + 1 , cidx - 1} -> select(x| self.validColumnHelper(x)) -> asSequence();
    
                for x in oneDiagonallyFwdMoves do 
                    possMoves:= possMoves->append(Tuple{toRow:piece.currentPlaceOnBoard.board.getOrderedRows()->at(ridx + 1),toColumn:piece.currentPlaceOnBoard.board.getOrderedColumns()->at(x)})
                end;
            end;
            if self.validRowHelper(ridx + 2) then
                
                twoDiagonallyFwdMoves := OrderedSet{cidx + 2 , cidx - 2} -> select(x| self.validColumnHelper(x)) -> asSequence();
                
                for x in twoDiagonallyFwdMoves do 
                    possMoves:= possMoves ->append(Tuple{toRow:piece.currentPlaceOnBoard.board.getOrderedRows()->at(ridx +2 ),toColumn:piece.currentPlaceOnBoard.board.getOrderedColumns()->at(x)})
                end;
            end;
        end;
        if (piece.patternType = #OneOrTwoSquareDiagonallyForward and piece.colour = #White) or piece.king -> size() = 1 then
            
            if self.validRowHelper(ridx - 1) then
                
                oneDiagonallyFwdMoves := OrderedSet{cidx + 1 , cidx - 1} -> select(x| self.validColumnHelper(x)) -> asSequence();
    
                for x in oneDiagonallyFwdMoves do 
                    possMoves:= possMoves->append(Tuple{toRow:piece.currentPlaceOnBoard.board.getOrderedRows()->at(ridx - 1),toColumn:piece.currentPlaceOnBoard.board.getOrderedColumns()->at(x)})
                end;
            end;
            if self.validRowHelper(ridx - 2) then
                
                twoDiagonallyFwdMoves := OrderedSet{cidx + 2 , cidx - 2} -> select(x| self.validColumnHelper(x)) -> asSequence();
                
                for x in twoDiagonallyFwdMoves do 
                    possMoves:= possMoves ->append(Tuple{toRow:piece.currentPlaceOnBoard.board.getOrderedRows()->at(ridx -2 ),toColumn:piece.currentPlaceOnBoard.board.getOrderedColumns()->at(x)})
                end;
            end;
        end;
        if possMoves -> size() = 0 then
            WriteLine('There are no possible Moves')
        else
            WriteLine('There are moves available')
        end;
        
        result := possMoves
        
    end

    validRowHelper(rowIndex: Integer): Boolean =
        if rowIndex > 8 or rowIndex < 1 then
            false
        else
            true
        endif
    validColumnHelper(columnIndex: Integer ): Boolean =
        if columnIndex > 8 or columnIndex < 1 then
            false
        else
            true
        endif
   








end

