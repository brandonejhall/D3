operations
    inviteToGame(rUser:User)
    begin
        declare gameInvite: GameInvite;
        gameInvite := new GameInvite();
        gameInvite.initialiseInvite(rUser,self);
    end
    respondToGameInvite(gInvite:GameInvite,accept:Boolean)
    begin
        gInvite.setStatus(accept)
    end
        
    initialisePreferences()
    begin
        declare search : Preference, status : Preference;
        search := new Preference();
        status := new Preference();
        search.updateStatus(#Everyone,#Available);
        insert (self,search) into sets;
        status.updateStatus(#Everyone,#Available);
        insert (self,search) into sets;
    end
    Block(username:String)
    begin
        declare block:Blocked,userToBeBlocked:User;
        userToBeBlocked := self.CB.UserSearch(username);
        block := new Blocked();
        insert (self,block) into updatesBlockedStatus;
        insert (userToBeBlocked,block) into recievesBStausUpdate;
        block.isBlocked := true;
    end

    

