    pre UserMustNotBeThemSelf: self.userName <> username
    pre UserMustNotAlreadyBeBlocked: updatedBlockStatus -> forAll(x| x.isBlocked = true and x.blocked.userName<>username)
    post UserIsBlocked: updatedBlockStatus.blocked->includes(self.CB.UserSearch(username))
